<!DOCTYPE html>
<html>
  <head>
    <title>BuyAndSell</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>

      Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %> | <%= link_to "Edit", edit_user_path(current_user.id)%>
      <div>
      <p><%= flash[:notice] %></p>
    </div>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %> | <%= link_to "Sign in with Facebook", "/auth/facebook" %>
    <% end %>
    <%= yield %>
  </body>
</html>
