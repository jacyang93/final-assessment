
<h1>Signup!</h1>

<% @user.errors.full_messages.each do |y| %>
<p><%= y %></p>
<% end %>

<%= form_for @user do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="filed">
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>

<div class="filed">
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>

<div class="filed">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
</div>

  <%= f.submit "Submit" %>
<% end %>
